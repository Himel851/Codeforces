#include<bits/stdc++.h>
using namespace std;
int main()
{
    int x;
    cin>>x;
    //1st line
    printf("*");
    for(int i=1;i<=x-2;i++)
        printf(" ");

    printf("* ");
    for(int i=1;i<=x;i++)
        printf("*");

    printf("\n");

    //print 2nd line to x-1 line

    for(int i=1;i<=x-2;i++)
    {
        printf("*");
        for(int j=1;j<=x-2;j++)
            printf(" ");
        printf("* *");
        for(int j=1;j<=x-2;j++)
            printf(" ");
        printf("*\n");
    }

    //print last line
    for(int i=1;i<=x;i++)
        printf("*");
    printf(" *");
    for(int j=1;j<=x-2;j++)
            printf(" ");
        printf("*\n");







    return 0;

}
